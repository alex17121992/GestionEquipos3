<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Vistas.AnadirPartido">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="252dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="1dp"
        android:background="@color/colorPrimary"
        android:gravity="bottom"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/tvDiaDePartido"
            android:layout_width="260dp"
            android:layout_height="113dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/standard_105"
            android:text="DÍA DE PARTIDO"
            android:textAlignment="center"
            android:textSize="@dimen/standard_45"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="443dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp">

    </LinearLayout>


    <ImageView
        android:id="@+id/imagenPartido"
        android:layout_width="245dp"
        android:layout_height="216dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="337dp"
        android:adjustViewBounds="true"
        android:src="@mipmap/campopequeo" />


    <EditText
        android:id="@+id/etTuEquipo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagenPartido"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-340dp"
        android:padding="@dimen/standard_10"
        android:textSize="@dimen/standard_21"
        android:background="@drawable/bordes_redondos"
        android:textAlignment="center"
        android:hint="Tu Equipo"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"/>

    <EditText
        android:id="@+id/etEquipoRival"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagenPartido"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-260dp"
        android:padding="@dimen/standard_10"
        android:textSize="@dimen/standard_21"
        android:background="@drawable/bordes_redondos"
        android:textAlignment="center"
        android:hint="Equipo Rival"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/tvFechaPartido"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/etEquipoRival"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="-2dp"
        android:layout_marginBottom="129dp"
        android:background="@drawable/bordes_redondos"
        android:hint="Fecha"
        android:padding="@dimen/standard_10"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/standard_21"
        android:textStyle="italic" />

    <Button
        android:id="@+id/btFechaPartido"
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imagenPartido"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="63dp"
        android:background="@drawable/bordes_re_fondo_naranja"
        android:text="Elige la fecha"
        android:textColor="@color/blanco"
        android:textStyle="bold" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floaBtAnadirPartido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-16dp"
        android:layout_marginBottom="@dimen/standard_25"
        app:backgroundTint="@color/naranja"
        android:layout_toEndOf="@+id/etTuEquipo"
        app:fab_colorPressed="@color/colorPrimary"
        android:src="@mipmap/right_arrow_35px"
        app:fabCustomSize="@dimen/standard_45" />

</RelativeLayout>